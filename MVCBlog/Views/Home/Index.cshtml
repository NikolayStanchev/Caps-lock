@{
    ViewBag.Title = "Home";
}
@model List<WebsiteForAds.Models.Post>
@foreach (var post in Model)
{
    <section class="row">
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Публикувано на <i>@post.Date</i>
                @if (post.Author != null)
                {
                    @:от <i>@post.Author.FullName (@post.Author.UserName)</i>
                }
            </div>
            <div class="body">
                <p>@post.Body</p>
            </div>

        </article>
    </section>
}

